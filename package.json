{
    "name": "Particle",
    "version": "10.0.0",
    "description": "A starterkit to build a design system shared to Pattern Lab, Drupal",
    "main": "gulpfile.js",
    "license": "GPL-2.0",
    "author": {
        "name": "Phase2 Technology",
        "url": "https://github.com/phase2/"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:phase2/particle.git"
    },
    "keywords": [
        "pattern-lab",
        "prototyping"
    ],
    "scripts": {
        "start": "npm run dev:pl",
        "dev:pl": "npm-run-all --continue-on-error --parallel dev:pl:gulp dev:pl:webpack",
        "dev:pl:webpack": "webpack-dev-server --config ./apps/pl/webpack.pl.dev.js --hot",
        "dev:pl:gulp": "NODE_ENV='development' gulp compile",
        "build:pl": "NODE_ENV='production' gulp compile; webpack --config ./apps/pl/webpack.pl.prod.js",
        "dev:drupal": "npm-run-all --continue-on-error --parallel dev:drupal:gulp dev:drupal:webpack",
        "dev:drupal:webpack": "webpack --watch --progress --config ./apps/drupal/webpack.drupal.dev.js",
        "dev:drupal:gulp": "NODE_ENV='development' echo Placeholder for Drupal gulp tasks",
        "build:drupal": "webpack --config ./apps/drupal/webpack.drupal.prod.js",
        "lint:js": "eslint ./",
        "lint:scss": "stylelint '{source, apps/drupal, apps/pl}/**/*.scss'",
        "lint": "npm run lint:js; npm run lint:scss",
        "gulp": "gulp",
        "setup": "cd ./apps/pl/pattern-lab && composer install --no-interaction --ignore-platform-reqs",
        "test:pa11y": "node tools/tests/accessibility/pa11y.js",
        "test:unit": "jest",
        "test": "npm run test:unit",
        "ci": "npm run lint && npm run test && npm run build:pl",
        "new": "yo ./tools/new-component/index.js"
    },
    "browserslist": [
        "last 2 versions",
        "IE >= 10",
        "iOS 8"
    ],
    "dependencies": {

        "flickity": "^2.1.2",
        "holderjs": "^2.9.6",
        "jquery": "^3.3.1",
        "lodash": "^4.17.11",
        "popper.js": "^1.14.5"
    },
    "devDependencies": {
        "@babel/core": "7.1.6",
        "@babel/plugin-proposal-class-properties": "7.1.0",
        "@babel/plugin-proposal-object-rest-spread": "7.0.0",
        "@babel/preset-env": "7.1.6",
        "@theme-tools/sass-export-data": "^1.1.1",
        "autoprefixer": "^9.3.1",
        "babel-core": "6.26.3",
        "babel-jest": "23.6.0",
        "babel-loader": "8.0.4",
        "css-loader": "^1.0.1",
        "eslint": "^5.9.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^3.3.0",

        "eslint-import-resolver-webpack": "^0.10.1",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jest": "^22.0.1",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.11.1",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^2.0.0",
        "glob-loader": "^0.3.0",
        "gulp": "^4.0.0",
        "html-webpack-plugin": "^4.0.0-alpha",

        "iconfont-plugin-webpack": "^1.1.2",
        "jest": "^23.6.0",
        "js-yaml": "^3.12.0",
        "node-sass": "^4.10.0",
        "npm-run-all": "^4.1.5",
        "postcss-loader": "^3.0.0",
        "regenerator-runtime": "^0.13.1",
        "sass-extract": "^2.1.0",
        "sass-flex-mixin": "^1.0.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "stylelint": "^9.8.0",
        "stylelint-scss": "^3.4.0",
        "stylelint-webpack-plugin": "^0.10.5",
        "through2": "^3.0.0",
        "url-loader": "^1.1.2",
        "webpack": "^4.26.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10",
        "webpack-merge": "^4.1.4",
        "webpack-shell-plugin": "^0.5.0",
        "yeoman-generator": "^3.1.1",
        "yo": "^2.0.5"
    }
}
